{%- comment -%}
  Header - Terminal CLI Design System
{%- endcomment -%}

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <div class="header-left">
        {% if section.settings.logo != blank %}
          <a href="{{ routes.root_url }}" class="logo-link">
            <img 
              src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}"
              alt="{{ shop.name }}"
              width="{{ section.settings.logo_width }}"
              height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio | round }}"
              class="logo-img"
            >
          </a>
        {% else %}
          <a href="{{ routes.root_url }}" class="logo-text link">
            <span class="logo-prompt">root@{{ shop.name }}:~$</span> sudo shop
          </a>
        {% endif %}
      </div>

      <nav class="header-nav" role="navigation">
        <ul class="nav-list">
          {%- for link in linklists[section.settings.menu].links -%}
            <li class="nav-item">
              <a href="{{ link.url }}" class="nav-link link{% if link.active %} active{% endif %}">
                <span class="nav-prompt">$</span>
                <span class="nav-command">{{ link.title | downcase }}</span>
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </nav>

      <div class="header-right">
        <a href="{{ routes.search_url }}" class="header-action link" aria-label="Search">
          <span class="action-prompt">$</span>
          <span class="action-command">find</span>
        </a>
        
        <a href="{{ routes.cart_url }}" class="header-action cart-link link" aria-label="Cart">
          <span class="action-prompt">$</span>
          <span class="action-command">./cart</span>
          {% if cart.item_count > 0 %}
            <span class="cart-count">[{{ cart.item_count }}]</span>
          {% endif %}
        </a>

        <button class="mobile-menu-toggle btn-secondary" aria-label="Menu">
          <span>☰</span>
        </button>
      </div>
    </div>
  </div>

  <div class="mobile-menu">
    <div class="mobile-menu-content">
      <ul class="mobile-nav-list">
        {%- for link in linklists[section.settings.menu].links -%}
          <li class="mobile-nav-item">
            <a href="{{ link.url }}" class="mobile-nav-link link">
              {{ link.title }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</header>

{% stylesheet %}
.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-color);
  padding: var(--spacing-16) 0;
  transition: all 0.3s ease;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-24);
}

.header-left {
  flex-shrink: 0;
}

.logo-link,
.logo-text {
  display: block;
  text-decoration: none;
}

.logo-img {
  max-width: {{ section.settings.logo_width }}px;
  height: auto;
  display: block;
}

.logo-text {
  font-family: var(--font-mono);
  font-size: 1.25rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: var(--spacing-8);
}

.logo-prompt {
  color: var(--accent-primary);
}

.header-nav {
  flex: 1;
}

.nav-list {
  display: flex;
  align-items: center;
  gap: var(--spacing-32);
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: var(--spacing-8);
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  transition: all 0.3s ease;
}

.nav-link.active {
  color: var(--accent-primary);
}

.nav-prompt {
  color: var(--accent-primary);
}

.nav-command {
  color: var(--text-secondary);
}

.nav-link:hover .nav-command {
  color: var(--text-primary);
}

.header-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-16);
  flex-shrink: 0;
}

.header-action {
  display: flex;
  align-items: center;
  gap: var(--spacing-8);
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.action-prompt {
  color: var(--accent-primary);
}

.action-command {
  color: var(--text-secondary);
}

.header-action:hover .action-command {
  color: var(--text-primary);
}

.cart-count {
  background: var(--accent-primary);
  color: var(--bg-primary);
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.75rem;
  margin-left: var(--spacing-4);
}

.mobile-menu-toggle {
  display: none;
  padding: 8px 12px;
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-primary);
  font-family: var(--font-mono);
  cursor: pointer;
}

.mobile-menu {
  display: none;
  position: fixed;
  top: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-primary);
  z-index: 999;
  overflow-y: auto;
}

.mobile-menu.active {
  display: block;
}

.mobile-menu-content {
  padding: var(--spacing-24);
}

.mobile-nav-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.mobile-nav-item {
  border-bottom: 1px solid var(--border-color);
}

.mobile-nav-link {
  display: block;
  padding: var(--spacing-16) 0;
  font-size: 1.125rem;
  text-decoration: none;
}

@media (max-width: 768px) {
  .header-nav {
    display: none;
  }

  .mobile-menu-toggle {
    display: block;
  }

  .logo-text {
    font-size: 1rem;
  }

  .header-action span:not(.cart-count) {
    display: none;
  }

  .cart-count {
    margin-left: 0;
    padding: 4px 10px;
  }
}

@media (max-width: 480px) {
  .site-header {
    padding: var(--spacing-12) 0;
  }

  .logo-img {
    max-width: 80px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const mobileToggle = document.querySelector('.mobile-menu-toggle');
  const mobileMenu = document.querySelector('.mobile-menu');

  if (mobileToggle && mobileMenu) {
    mobileToggle.addEventListener('click', function() {
      mobileMenu.classList.toggle('active');
      this.textContent = mobileMenu.classList.contains('active') ? '✕' : '☰';
    });

    mobileMenu.addEventListener('click', function(e) {
      if (e.target.classList.contains('mobile-nav-link')) {
        mobileMenu.classList.remove('active');
        mobileToggle.textContent = '☰';
      }
    });
  }
});
{% endjavascript %}
