<a href="{{ product.url }}" class="product-card">
  
  <!-- Terminal Window Chrome -->
  <div class="terminal-header">
    <div class="terminal-controls">
      <span class="terminal-control red"></span>
      <span class="terminal-control yellow"></span>
      <span class="terminal-control green"></span>
    </div>
    <span class="terminal-title">{{ product.handle }}.sh</span>
  </div>
  
  <!-- Product Content -->
  <div style="padding: var(--spacing-md);">
    
    <!-- Product Image -->
    <div class="product-image">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | img_url: '600x600' }}" alt="{{ product.title | escape }}" loading="lazy">
      {% else %}
        <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-center; color: var(--color-text-muted);">
          <span style="font-size: 3rem;">â—¼</span>
        </div>
      {% endif %}
      
      {% unless product.available %}
        <div style="position: absolute; inset: 0; background: rgba(10, 14, 20, 0.9); display: flex; align-items: center; justify-center;">
          <span style="color: var(--color-error); font-size: 0.875rem;">OUT_OF_STOCK</span>
        </div>
      {% endunless %}
    </div>
    
    <!-- Product Info -->
    <div style="margin-top: var(--spacing-md); min-height: 80px;">
      <div class="command-prompt" style="margin-bottom: var(--spacing-sm); font-size: 0.75rem;">
        <span class="prompt-symbol">$</span> cat {{ product.handle }}.txt
      </div>
      <h3 class="product-title" style="padding-left: var(--spacing-md); min-height: 48px;">{{ product.title }}</h3>
      <div style="display: flex; align-items: center; justify-content: space-between; padding-left: var(--spacing-md); margin-top: var(--spacing-sm);">
        <span class="product-price">{{ product.price | money }}</span>
        <span style="font-size: 0.75rem; color: var(--color-secondary); transition: color var(--transition);">&gt;&gt;</span>
      </div>
    </div>
    
  </div>
  
</a>

