<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title }}{{ page_title | default: shop.name }}</title>
  
  {% if page_description %}
    <meta name="description" content="{{ page_description }}">
  {% endif %}
  
  <link rel="canonical" href="{{ canonical_url }}">
  
  {%- if settings.font_family contains 'JetBrains' or settings.font_family contains 'Fira' -%}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&family=Fira+Code:wght@400;600;700&display=swap" rel="stylesheet">
  {%- endif -%}
  
  {{ 'terminal-theme.css' | asset_url | stylesheet_tag }}
  
  {{ content_for_header }}
  
  <style>
    :root {
      --color-primary: {{ settings.color_primary | default: '#00ff88' }};
      --color-secondary: {{ settings.color_secondary | default: '#00d9ff' }};
      --color-background: {{ settings.color_background | default: '#0a0e14' }};
      --color-surface: {{ settings.color_surface | default: '#151b26' }};
      --font-mono: {{ settings.font_family | default: 'JetBrains Mono, monospace' }};
    }
  </style>
</head>
<body>
  
  {%- if settings.enable_boot_screen -%}
    <div id="boot-screen" class="boot-screen">
      <!-- Boot screen will be injected via JavaScript -->
    </div>
  {%- endif -%}
  
  {% section 'header' %}
  
  <main role="main" id="main-content">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
  
  <!-- Cart Drawer -->
  <div id="cart-drawer" class="cart-drawer">
    <div class="terminal-window" style="height: 100%; border-radius: 0;">
      <div class="terminal-header">
        <div style="display: flex; align-items: center; gap: 8px;">
          <div class="terminal-controls">
            <span class="terminal-control red"></span>
            <span class="terminal-control yellow"></span>
            <span class="terminal-control green"></span>
          </div>
          <span class="terminal-title">cart.sh</span>
        </div>
        <button id="cart-close" class="btn-secondary" style="padding: 4px 12px; font-size: 12px;">
          close
        </button>
      </div>
      <div class="terminal-content">
        <div class="command-prompt">
          <span class="prompt-user">user@terminal</span><span class="prompt-dir">:~/cart</span><span class="prompt-symbol">$</span> ls -la
        </div>
        <div id="cart-items">
          <!-- Cart items will be dynamically loaded -->
        </div>
      </div>
    </div>
  </div>
  <div id="cart-overlay" class="cart-overlay"></div>
  
  {{ 'terminal-theme.js' | asset_url | script_tag }}
  
</body>
</html>
