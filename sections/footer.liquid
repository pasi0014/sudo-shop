<div class="footer page-width">
  <div class="terminal-window">
    <div class="terminal-header">
      <div class="terminal-button close"></div>
      <div class="terminal-button minimize"></div>
      <div class="terminal-button maximize"></div>
      <h1 class="terminal-title">~/footer</h1>
    </div>
    <div class="terminal-body">
      <div class="footer-content">
        <div class="footer-section">
          <h3 class="footer-heading">
            <span class="terminal-prompt">></span> sudo-shop
          </h3>
          <p class="footer-description">
            Premium tech products for developers, sysadmins, and tech enthusiasts.
            Quality gear for those who live and breathe code.
          </p>
          {% if section.settings.show_social %}
            <div class="footer-social">
              {% if settings.social_twitter_link != blank %}
                <a href="{{ settings.social_twitter_link }}" class="social-link" aria-label="Twitter">
                  [TWITTER]
                </a>
              {% endif %}
              {% if settings.social_facebook_link != blank %}
                <a href="{{ settings.social_facebook_link }}" class="social-link" aria-label="Facebook">
                  [FACEBOOK]
                </a>
              {% endif %}
              {% if settings.social_instagram_link != blank %}
                <a href="{{ settings.social_instagram_link }}" class="social-link" aria-label="Instagram">
                  [INSTAGRAM]
                </a>
              {% endif %}
              {% if settings.social_youtube_link != blank %}
                <a href="{{ settings.social_youtube_link }}" class="social-link" aria-label="YouTube">
                  [YOUTUBE]
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>

        {% for block in section.blocks %}
          <div class="footer-section" {{ block.shopify_attributes }}>
            {% if block.type == 'link_list' %}
              <h3 class="footer-heading">
                <span class="terminal-prompt">></span> {{ block.settings.heading }}
              </h3>
              <ul class="footer-links terminal-list">
                {% for link in block.settings.menu.links %}
                  <li>
                    <a href="{{ link.url }}" class="terminal-link">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            {% elsif block.type == 'text' %}
              <h3 class="footer-heading">
                <span class="terminal-prompt">></span> {{ block.settings.heading }}
              </h3>
              <div class="footer-text">
                {{ block.settings.text }}
              </div>
            {% elsif block.type == 'newsletter' %}
              <h3 class="footer-heading">
                <span class="terminal-prompt">></span> {{ block.settings.heading }}
              </h3>
              <div class="footer-newsletter">
                <p class="newsletter-description">{{ block.settings.text }}</p>
                {% form 'customer' %}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="newsletter-form">
                    <input 
                      type="email" 
                      name="contact[email]" 
                      placeholder="{{ 'general.newsletter.email_placeholder' | t }}"
                      class="terminal-input newsletter-input"
                      required
                    >
                    <button type="submit" class="terminal-button newsletter-button">
                      [SUBSCRIBE]
                    </button>
                  </div>
                {% endform %}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      <div class="footer-bottom">
        <div class="footer-copyright">
          <span class="terminal-prompt">$</span> 
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </div>
        
        {% if section.settings.show_payment_icons %}
          <div class="footer-payment">
            <span class="terminal-prompt">></span> 
            <span class="payment-methods">[PAYMENT METHODS]</span>
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class: 'payment-icon' }}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show social media links"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "default": true,
      "label": "Show payment icons"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Quick links",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "About",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Newsletter",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Subscribe to get special offers and updates.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "text"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}

{% stylesheet %}
.footer {
  margin-top: 4rem;
  margin-bottom: 2rem;
}

.footer-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

@media (min-width: 750px) {
  .footer-content {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 990px) {
  .footer-content {
    grid-template-columns: repeat(4, 1fr);
  }
}

.footer-section {
  display: flex;
  flex-direction: column;
}

.footer-heading {
  font-size: 1.2rem;
  margin: 0 0 1rem 0;
  color: var(--terminal-accent);
}

.footer-description {
  color: var(--terminal-text-dim);
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.footer-social {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.social-link {
  color: var(--terminal-info);
  text-decoration: none;
  padding: 0.5rem 1rem;
  border: 1px dashed var(--terminal-info);
  transition: all 0.3s ease;
  font-size: 0.8rem;
}

.social-link:hover {
  background: var(--terminal-info);
  color: var(--terminal-bg);
  border-style: solid;
}

.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-links li {
  padding: 0.5rem 0;
  border-bottom: 1px dashed var(--terminal-border);
}

.footer-links li::before {
  content: '>';
  color: var(--terminal-accent);
  margin-right: 0.75rem;
  font-weight: bold;
}

.footer-links a {
  color: var(--terminal-text-dim);
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-links a:hover {
  color: var(--terminal-accent);
  text-shadow: 0 0 10px var(--glow-color);
}

.footer-text {
  color: var(--terminal-text-dim);
  line-height: 1.6;
}

.footer-newsletter {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.newsletter-description {
  color: var(--terminal-text-dim);
  margin: 0;
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.newsletter-input {
  background: transparent;
  border: 1px solid var(--terminal-border);
  padding: 0.75rem;
  color: var(--terminal-text);
  font-family: inherit;
  outline: none;
}

.newsletter-input:focus {
  border-color: var(--terminal-accent);
  box-shadow: 0 0 10px var(--glow-color);
}

.newsletter-button {
  padding: 0.75rem;
  font-size: 0.9rem;
}

.footer-bottom {
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid var(--terminal-border);
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

@media (min-width: 750px) {
  .footer-bottom {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
}

.footer-copyright {
  color: var(--terminal-text-dim);
  font-size: 0.9rem;
}

.footer-payment {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.payment-methods {
  color: var(--terminal-text-dim);
  font-size: 0.8rem;
  margin-right: 1rem;
}

.payment-icon {
  width: 32px;
  height: 20px;
  opacity: 0.7;
}

@media (max-width: 749px) {
  .footer-content {
    gap: 1.5rem;
  }
  
  .social-link {
    padding: 0.4rem 0.8rem;
    font-size: 0.75rem;
  }
  
  .newsletter-form {
    flex-direction: column;
  }
}
{% endstylesheet %}
