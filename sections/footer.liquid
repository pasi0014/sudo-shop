<footer class="terminal-window" style="border-radius: 0; border-left: none; border-right: none; border-bottom: none;">
  <div class="terminal-content" style="padding: var(--spacing-2xl) 0;">
    <div class="container">
      
      <!-- Footer Command -->
      <div class="command-prompt" style="margin-bottom: var(--spacing-xl);">
        <span class="prompt-user">user@terminal</span><span class="prompt-dir">:~/</span><span class="prompt-symbol">$</span> cat ./footer/info.txt
      </div>
      
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: var(--spacing-2xl); margin-bottom: var(--spacing-2xl);">
        
        <!-- Brand Column -->
        <div>
          <h3 style="font-size: 1rem; font-weight: 600; margin-bottom: var(--spacing-md); color: var(--color-primary);">
            $ techstore.sh
          </h3>
          <p style="font-size: 0.875rem; color: var(--color-text-secondary); line-height: 1.6;">
            Premium tech products for developers. Curated by nerds, for nerds.
          </p>
          <div style="margin-top: var(--spacing-md); font-size: 0.75rem; color: var(--color-text-muted);">
            Est. {{ 'now' | date: '%Y' }}
          </div>
        </div>
        
        <!-- Shop Column -->
        <div>
          <div style="font-size: 0.75rem; color: var(--color-secondary); margin-bottom: var(--spacing-sm);">[SHOP]</div>
          <ul style="list-style: none; padding: 0; margin: 0; font-size: 0.875rem;">
            <li style="margin-bottom: var(--spacing-sm);">
              <a href="{{ routes.all_products_collection_url }}" style="color: var(--color-text-secondary);">
                <span style="color: var(--color-secondary);">./</span>products
              </a>
            </li>
            {% for link in linklists.footer.links %}
              <li style="margin-bottom: var(--spacing-sm);">
                <a href="{{ link.url }}" style="color: var(--color-text-secondary);">
                  <span style="color: var(--color-secondary);">./</span>{{ link.title | downcase }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        
        <!-- Support Column -->
        <div>
          <div style="font-size: 0.75rem; color: var(--color-secondary); margin-bottom: var(--spacing-sm);">[SUPPORT]</div>
          <ul style="list-style: none; padding: 0; margin: 0; font-size: 0.875rem;">
            <li style="margin-bottom: var(--spacing-sm);">
              <a href="/pages/contact" style="color: var(--color-text-secondary);">
                <span style="color: var(--color-secondary);">./</span>contact
              </a>
            </li>
            <li style="margin-bottom: var(--spacing-sm);">
              <a href="/pages/shipping" style="color: var(--color-text-secondary);">
                <span style="color: var(--color-secondary);">./</span>shipping
              </a>
            </li>
            <li style="margin-bottom: var(--spacing-sm);">
              <a href="/pages/returns" style="color: var(--color-text-secondary);">
                <span style="color: var(--color-secondary);">./</span>returns
              </a>
            </li>
          </ul>
        </div>
        
        <!-- Legal Column -->
        <div>
          <div style="font-size: 0.75rem; color: var(--color-secondary); margin-bottom: var(--spacing-sm);">[LEGAL]</div>
          <ul style="list-style: none; padding: 0; margin: 0; font-size: 0.875rem;">
            <li style="margin-bottom: var(--spacing-sm);">
              <a href="/pages/privacy" style="color: var(--color-text-secondary);">
                <span style="color: var(--color-secondary);">./</span>privacy
              </a>
            </li>
            <li style="margin-bottom: var(--spacing-sm);">
              <a href="/pages/terms" style="color: var(--color-text-secondary);">
                <span style="color: var(--color-secondary);">./</span>terms
              </a>
            </li>
          </ul>
        </div>
        
      </div>
      
      <!-- Bottom Bar -->
      <div style="border-top: 1px solid var(--color-border); padding-top: var(--spacing-lg); display: flex; flex-wrap: wrap; align-items: center; justify-content: space-between; gap: var(--spacing-md);">
        <div style="font-size: 0.75rem; color: var(--color-text-muted);">
          <span style="color: var(--color-primary);">></span> {{ shop.name }} © {{ 'now' | date: '%Y' }} - All rights reserved
        </div>
        <div style="font-size: 0.75rem; color: var(--color-text-muted);">
          Built with <span style="color: var(--color-primary);">❤</span> by developers
        </div>
      </div>
      
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}

