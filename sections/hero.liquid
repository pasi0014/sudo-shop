  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hero-section {
  padding: 2rem 0;
  margin: 2rem auto;
}

.hero-section--full-width .page-width {
  max-width: 100%;
  padding: 0;
}

.hero-window {
  min-height: 600px;
}

.hero-window.hero-section--large {
  min-height: 700px;
}

.hero-window.hero-section--medium {
  min-height: 550px;
}

.hero-window.hero-section--small {
  min-height: 450px;
}

.hero-body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 500px;
}

.hero-content {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  align-items: center;
}

@media (min-width: 990px) {
  .hero-content {
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
}

.hero-terminal {
  background: #1a1a1a;
  border: 1px solid var(--terminal-border);
  padding: 1.5rem;
  font-family: 'Courier New', monospace;
  font-size: 0.9rem;
  max-height: 300px;
  overflow-y: auto;
}

.terminal-line {
  margin-bottom: 0.5rem;
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.hero-heading {
  font-size: 2rem;
  margin: 0;
  line-height: 1.2;
  color: var(--terminal-text);
}

@media (min-width: 750px) {
  .hero-heading {
    font-size: 3rem;
  }
}

.hero-subheading {
  font-size: 1.1rem;
  color: var(--terminal-text-dim);
  line-height: 1.6;
  margin: 0;
}

.hero-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.hero-button {
  padding: 14px 28px;
  font-size: 1rem;
}

.hero-link {
  padding: 12px 24px;
  border: 2px dashed var(--terminal-info);
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.hero-link:hover {
  border-style: solid;
}

.hero-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1.5rem;
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid var(--terminal-border);
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 2rem;
  margin-bottom: 0.5rem;
  display: block;
}

.stat-label {
  font-size: 0.9rem;
  color: var(--terminal-text-dim);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.hero-image-wrapper {
  position: relative;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.3s ease;
}

.hero-image:hover {
  transform: scale(1.05);
}

.hero-image-border {
  position: absolute;
  top: 10px;
  left: 10px;
  right: 10px;
  bottom: 10px;
  border: 2px solid var(--terminal-accent);
  pointer-events: none;
}

.hero-command-line {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-top: 2rem;
  padding: 1rem;
  background: #1a1a1a;
  border: 1px solid var(--terminal-border);
  border-radius: 4px;
}

.hero-command-input {
  flex: 1;
  background: transparent;
  border: none;
  color: var(--terminal-text);
  font-family: inherit;
  font-size: 1rem;
  padding: 0.5rem;
  outline: none;
}

.hero-command-input::placeholder {
  color: var(--terminal-text-dim);
}

@media (max-width: 989px) {
  .hero-stats {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .stat-value {
    font-size: 1.5rem;
  }
}

@media (max-width: 750px) {
  .hero-section {
    padding: 1rem 0;
  }
  
  .hero-window {
    min-height: auto;
  }
  
  .hero-body {
    min-height: 400px;
  }
  
  .hero-heading {
    font-size: 1.8rem;
  }
  
  .hero-subheading {
    font-size: 1rem;
  }
  
  .hero-actions {
    flex-direction: column;
  }
  
  .hero-button,
  .hero-link {
    width: 100%;
  }
  
  .hero-terminal {
    max-height: 200px;
  }
}
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const commandInput = document.querySelector('.hero-command-input');
  
  if (commandInput) {
    commandInput.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        const command = this.value.toLowerCase().trim();
        const heroTerminal = document.querySelector('.hero-terminal');
        
        if (heroTerminal) {
          const output = document.createElement('div');
          output.className = 'terminal-line';
          
          switch(command) {
            case 'help':
              output.innerHTML = `
                <span class="terminal-prompt">user@sudo-shop:~$</span> ${this.value}<br>
                <span class="terminal-output info">Available commands: help, shop, about, contact, clear</span>
              `;
              break;
            case 'shop':
              output.innerHTML = `
                <span class="terminal-prompt">user@sudo-shop:~$</span> ${this.value}<br>
                <span class="terminal-output success">[SUCCESS] Redirecting to shop...</span>
              `;
              setTimeout(() => {
                window.location.href = '/collections/all';
              }, 1000);
              break;
            case 'about':
              output.innerHTML = `
                <span class="terminal-prompt">user@sudo-shop:~$</span> ${this.value}<br>
                <span class="terminal-output success">[SUCCESS] Redirecting to about...</span>
              `;
              setTimeout(() => {
                window.location.href = '/pages/about';
              }, 1000);
              break;
            case 'contact':
              output.innerHTML = `
                <span class="terminal-prompt">user@sudo-shop:~$</span> ${this.value}<br>
                <span class="terminal-output success">[SUCCESS] Redirecting to contact...</span>
              `;
              setTimeout(() => {
                window.location.href = '/pages/contact';
              }, 1000);
              break;
            case 'clear':
              heroTerminal.innerHTML = '';
              this.value = '';
              return;
            case '':
              return;
            default:
              output.innerHTML = `
                <span class="terminal-prompt">user@sudo-shop:~$</span> ${this.value}<br>
                <span class="terminal-output error">[ERROR] Command not found: ${command}</span>
              `;
          }
          
          heroTerminal.appendChild(output);
          heroTerminal.scrollTop = heroTerminal.scrollHeight;
          this.value = '';
        }
      }
    });
  }
});
{% endjavascript %}
