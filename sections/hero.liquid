<div class="hero-section{% if section.settings.full_width %} hero-section--full-width{% endif %}">
  <div class="terminal-window hero-window">
    <div class="terminal-header">
      <div class="terminal-button close"></div>
      <div class="terminal-button minimize"></div>
      <div class="terminal-button maximize"></div>
      <h1 class="terminal-title">~/welcome</h1>
    </div>
    <div class="terminal-body hero-body">
      <div class="hero-content">
        <div class="hero-terminal">
          <div class="terminal-output boot-sequence">
            <div class="terminal-line">
              <span class="terminal-prompt">root@sudo-shop:~$</span> ./init.sh
            </div>
            <div class="terminal-line">
              <span class="terminal-output info">[INFO] Loading premium tech products...</span>
            </div>
            <div class="terminal-line">
              <span class="terminal-output success">[SUCCESS] Systems operational</span>
            </div>
          </div>
        </div>

        <div class="hero-text">
          {% if section.settings.heading != blank %}
            <h1 class="hero-heading">
              <span class="terminal-prompt">></span>
              <span class="typewriter">{{ section.settings.heading }}</span>
              <span class="terminal-cursor-block"></span>
            </h1>
          {% else %}
            <h1 class="hero-heading">
              <span class="terminal-prompt">></span>
              <span class="typewriter">Premium Tech for Developers</span>
              <span class="terminal-cursor-block"></span>
            </h1>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <p class="hero-subheading">{{ section.settings.subheading }}</p>
          {% else %}
            <p class="hero-subheading">
              <span class="terminal-prompt">></span> 
              Elevate your workspace with gear designed for those who code, build, and break things.
            </p>
          {% endif %}

          <div class="hero-actions">
            {% if section.settings.button_label_1 != blank and section.settings.button_link_1 != blank %}
              <a href="{{ section.settings.button_link_1 }}" class="terminal-button hero-button">
                [{{ section.settings.button_label_1 }}]
              </a>
            {% else %}
              <a href="/collections/all" class="terminal-button hero-button">
                [SHOP NOW]
              </a>
            {% endif %}

            {% if section.settings.button_label_2 != blank and section.settings.button_link_2 != blank %}
              <a href="{{ section.settings.button_link_2 }}" class="terminal-link hero-link">
                [{{ section.settings.button_label_2 }}]
              </a>
            {% else %}
              <a href="/pages/about" class="terminal-link hero-link">
                [LEARN MORE]
              </a>
            {% endif %}
          </div>

          {% if section.settings.show_stats %}
            <div class="hero-stats">
              <div class="stat-item">
                <div class="stat-value terminal-command">{{ section.settings.stat_1_value | default: '500+' }}</div>
                <div class="stat-label">{{ section.settings.stat_1_label | default: 'Products' }}</div>
              </div>
              <div class="stat-item">
                <div class="stat-value terminal-command">{{ section.settings.stat_2_value | default: '50K+' }}</div>
                <div class="stat-label">{{ section.settings.stat_2_label | default: 'Customers' }}</div>
              </div>
              <div class="stat-item">
                <div class="stat-value terminal-command">{{ section.settings.stat_3_value | default: '24/7' }}</div>
                <div class="stat-label">{{ section.settings.stat_3_label | default: 'Support' }}</div>
              </div>
            </div>
          {% endif %}
        </div>

        {% if section.settings.image != blank %}
          <div class="hero-image-wrapper">
            <img 
              srcset="
                {{ section.settings.image | image_url: width: 400 }} 400w,
                {{ section.settings.image | image_url: width: 600 }} 600w,
                {{ section.settings.image | image_url: width: 800 }} 800w,
                {{ section.settings.image | image_url: width: 1000 }} 1000w
              "
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | escape }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              loading="lazy"
              class="hero-image"
            >
            {% if section.settings.show_image_border %}
              <div class="hero-image-border"></div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% if section.settings.show_command_line %}
        <div class="hero-command-line">
          <span class="terminal-prompt">user@sudo-shop:~$</span>
          <input 
            type="text" 
            class="hero-command-input" 
            placeholder="Type 'help' for commands..."
            autocomplete="off"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>

